<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tec"
            android:id="@+id/tec"
            android:layout_centerInParent="true"
            android:textColor="#000"
            android:textSize="20sp"/>

        <TextView
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tec"
            android:text="@string/yo"
            android:textAlignment="center"
            android:id="@+id/yo"
            android:layout_centerInParent="true"
            android:layout_marginTop="30dp"
            android:textColor="#000"
            android:textSize="15sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tec"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            android:contentDescription="@string/tec"
            android:src="@drawable/logotec" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white">

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/materia"
            android:textAlignment="center"
            android:id="@+id/texto_materia"
            android:textColor="#000" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Siguiente"
            android:layout_above="@id/texto_materia"
            android:layout_marginBottom="30dp"
            android:layout_centerInParent="true" />
    </RelativeLayout>

</LinearLayout>